@model IEnumerable<MVC_LOGIN_CRUD.Models.Producto>

@{
    ViewBag.Title = "Index";
}
<font color="red">
    <center>
        <h2>Lista Productos</h2>
    </center>
</font>


<p>
    @Html.ActionLink("Crear nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rubro.rubro1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rubro.rubro1)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_producto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_producto }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id_producto })
        </td>
    </tr>
}

</table>
